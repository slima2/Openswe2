{
  "name": "open-swe-memory-optimized",
  "version": "1.0.0",
  "description": "Memory optimized Open SWE for giant codebases",
  "scripts": {
    "start": "node start-moderate-16gb.js",
    "start:conservative": "node start-conservative-8gb.js",
    "start:moderate": "node start-moderate-16gb.js", 
    "start:aggressive": "node start-aggressive-32gb.js",
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test:memory": "npx tsx test-syntax-aware-truncation.ts"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}